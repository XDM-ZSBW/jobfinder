{
  "version": 2,
  "buildCommand": "bash vercel-build.sh",
  "installCommand": "npm install --production && cd backend && npm install && npx prisma generate",
  "outputDirectory": "frontend/dist",
  "env": {
    "NODE_PATH": "/var/task/node_modules:/var/task/api/node_modules"
  },
  "functions": {
    "api/**/*.js": {
      "includeFiles": "api/**"
    }
  },
  "routes": [
    {
      "src": "/api/test",
      "dest": "/api/test.js"
    },
    {
      "src": "/api/voice/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/(.*\\.(js|css|map|json|svg|png|jpg|jpeg|gif|ico|woff|woff2|ttf|eot))",
      "dest": "/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
